<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="InconsistentLayout">

    <Spinner
        android:id="@+id/race_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/questions_padding"
        android:layout_marginLeft="@dimen/questions_padding"
        android:layout_marginRight="@dimen/questions_padding"
        android:prompt="@string/questions_prompt_race" />

    <FrameLayout
        android:id="@+id/race_questions"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>