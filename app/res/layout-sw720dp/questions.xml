<!--
     Dividers are not supported until API 11. Smallest width layouts were not
     introduced until API 13 (Android 3.2). Because of this, the lint error
     for the divider (NewApi) can be ignored since this layout will never be
     used on devices that do not support layout dividers.
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:divider="?android:attr/dividerHorizontal"
    android:showDividers="middle"
    android:baselineAligned="false"
    tools:ignore="NewApi">

    <ListView
        android:id="@+id/race_list"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="0.35" />

    <FrameLayout
        android:id="@+id/race_questions"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="0.65" />

</LinearLayout>